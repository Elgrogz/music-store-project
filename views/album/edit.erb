<h1>Edit Album</h1>

<form action="/albums/<%= @album.id %>" method="post">
  <p>
    <label>
      Title:
      <input type="text" name="title" value="<%= @album.title %>"/>
    </label>
  </p>

  <p>
    <label>Artist:
      <select name="artist_id">
        <% for artist in @artists %>
        <option value="<%= artist.id %>"><%= artist.name %></option> 
        <% end %>
      </select>
    </label>
  </p>

  <p>
    <label>
     Genre:
     <input type="text" name="genre" value="<%= @album.genre %>"/>
   </label>
 </p>

 <p>
  <label>
    Quantity:
    <input type="number" name="quantity" value="<%= @album.quantity %>"/>
  </label>
</p>

<p>
  <label>Buy price:
    <input type="number" name="buy_price" value="<%= @album.buy_price %>"/>
  </label>
</p>

<p>
  <label>Sell price:
    <input type="number" name="sell_price" value="<%= @album.sell_price %>"/>
  </label>
</p>

<input type="submit" value="Edit Artist"/>

</form>