<h1>Artist view</h1>

<div class="individual_view">
  <div class="info">
    <p>Artist name: <%= @artist.name %></p>
    <p>Current Albums:</p>
    <% for album in @albums %>
    <p><a href="/albums/<%= album.id %>"><%= album.title %></a>
    </p>
    <% end %>

    <form action="/artists/<%= @artist.id %>/edit" method="get">
      <input type="submit" value="Edit Artist">
    </form>

    <form action="/artists/<%= @artist.id %>/delete" method="post">
      <input type="submit" value="Delete Artist">
    </form>
  </div>
  <img src="<%= @artist.artist_url %>">
</div>